<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ua_titlebar_layout"
    style="@style/UA.TitleBar.Layout" >

    <ImageButton
        android:id="@+id/ua_titlebar_back"
        style="@style/UA.TitleBar.ImageButton.Back"
        android:contentDescription="@string/ua_contentDescription" />

    <TextView
        android:id="@+id/ua_titlebar_title"
        style="@style/UA.TitleBar.Title"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/ua_titlebar_progress"
            style="@style/UA.TitleBar.Progress"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ua_titlebar_menu"
            style="@style/UA.TitleBar.ImageButton.Menu"
            android:contentDescription="@string/ua_contentDescription"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>