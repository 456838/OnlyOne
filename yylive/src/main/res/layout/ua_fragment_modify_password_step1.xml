<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ua_modify_password_tv_tips"
        style="@style/UA.TextView.Normal"
        android:layout_height="58dip"
        android:background="@null"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:text="" />

    <View style="@style/UA.Divider.Solid.Horizontal" />

    <LinearLayout style="@style/UA.EditText.Layout" >

        <ImageView
            style="@style/UA.EditText.DrawableLeft"
            android:contentDescription="@string/ua_contentDescription"
            android:src="@drawable/ua_ic_reg_token" />

        <com.yy.udbauth.ui.widget.UdbEditText
            android:id="@+id/ua_modify_password_et_smscode"
            style="@style/UA.EditText.Theme"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:hint="@string/ua_modify_password_sms_code_hint"
            android:inputType="number"
            android:maxLength="30"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/ua_modify_password_btn_clear_sms_code"
            style="@style/UA.EditText.DrawableRight"
            android:contentDescription="@string/ua_contentDescription"
            android:src="@drawable/ua_ic_delete" />

        <com.yy.udbauth.ui.widget.UdbButton
            android:id="@+id/ua_modify_password_btn_get_sms_code"
            style="@style/UA.Button.Theme"
            android:layout_width="130dp"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:singleLine="true"
            android:text="@string/ua_modify_password_btn_get_sms_code"
            android:textSize="15sp" />
    </LinearLayout>

    <View style="@style/UA.Divider.Solid.Horizontal" />

    <Button
        android:id="@+id/ua_modify_password_btn_next"
        style="@style/UA.Button.Theme"
        android:layout_width="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="37dp"
        android:enabled="false"
        android:text="@string/ua_modify_password_btn_next" />

</LinearLayout>